<% @articles.map do |article| %>
  <article class="article article-blog">
    <h3 class="article-title"><%= link_to article.title, article_path(article), class: 'link-page' %></h1>
    <div class="article-timestamp"><%= article.pretty_date %></div>
    <%= image_tag article.image_url, alt: article.image_alt, class: 'img-page' %>
    <%= article.pretty_text %>
  </article>
<% end %>
