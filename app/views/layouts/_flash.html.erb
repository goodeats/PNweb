<% flash.each do |type, message| %>
  <% unless message.strip.empty? %>
    <% if type == 'success' %>
      <div class="flash flash-success"><%= message %></div>
    <% elsif type == 'notice' %>
      <div class="flash flash-danger"><%= message %></div>
    <% elsif type == 'warning' %>
      <div class="flash flash-warning"><%= message %></div>
    <% else %>
      <div class="flash flash-info"><%= message %></div>
    <% end %>
  <% end %>
<% end %>
<script>
  $('document').ready(function() {
    setTimeout(function() {
      console.log('clear flash');
      $('.flash').slideUp();
    }, 3000);
  });
</script>
