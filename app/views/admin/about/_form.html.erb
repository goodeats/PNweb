<%= form_for [:admin, @about], url: {action: @action}, html: {class: 'form'} do |f| %>
  <p class="article-p">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-input-text' %>
  </p>

  <p class="article-p">
    <label class="form-label" for="fake-label">Published</label>
    <div class="onoffswitch">
      <%= f.check_box :published, {checked: @about.published, class: 'onoffswitch-checkbox'} %>
      <%= f.label :published, '', class: 'onoffswitch-label' %>
    </div>
  </p>

  <p class="article-p">
    <%= f.label :priority, class: 'form-label' %>
    <%= f.number_field :priority, class: 'form-input-text' %>
  </p>

  <p class="article-p">
    <%= f.label :text, class: 'form-label' %>
    <!-- TODO: https://stackoverflow.com/questions/2831072/in-rails-how-can-i-allow-some-html-in-a-text-area/7420541 -->
    <%= f.text_area :text, class: 'form-input-text form-input-textarea' %>
  </p>

  <p class="article-p">
    <%= f.submit 'Save', class: 'form-submit' %>
  </p>
<% end %>
