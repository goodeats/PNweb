<%= form_for [:admin, @project], html: {class: 'form'} do |f| %>
  <p class="article-p">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-input-text' %>
  </p>

  <p class="article-p">
    <label class="form-label" for="fake-label">Published</label>
    <div class="onoffswitch">
      <%= f.check_box :published, {checked: @project.published, class: 'onoffswitch-checkbox'} %>
      <%= f.label :published, '', class: 'onoffswitch-label' %>
    </div>
  </p>

  <p class="article-p">
    <label class="form-label" for="fake-label">Standalone Project</label>
    <div class="onoffswitch">
      <%= f.check_box :external, {checked: @project.external, class: 'onoffswitch-checkbox'} %>
      <%= f.label :external, '', class: 'onoffswitch-label' %>
    </div>
  </p>

  <p class="article-p">
    <%= f.label :url, class: 'form-label' %>
    <%= f.text_field :url, class: 'form-input-text' %>
  </p>

  <p class="article-p">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-input-text form-input-textarea' %>
  </p>

  <p class="article-p">
    <%= f.submit 'Save', class: 'form-submit' %>
  </p>
<% end %>
