<%= form_for [:admin, @article], html: {class: 'form'} do |f| %>
  <p class="article-p">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-input-text' %>
  </p>

  <p class="article-p">
    <label class="form-label" for="fake-label">Published</label>
    <div class="onoffswitch">
      <%= f.check_box :published, {checked: @article.published, class: 'onoffswitch-checkbox'} %>
      <%= f.label :published, '', class: 'onoffswitch-label' %>
    </div>
  </p>

  <p class="article-p">
    <%= f.label :image_url, class: 'form-label' %>
    <%= f.text_field :image_url, class: 'form-input-text' %>
  </p>

  <p class="article-p">
    <%= f.label :image_alt, class: 'form-label' %>
    <%= f.text_field :image_alt, class: 'form-input-text' %>
  </p>

  <p class="article-p">
    <%= f.label :text, class: 'form-label' %>
    <%= f.text_area :text, class: 'form-input-text form-input-textarea' %>
  </p>

  <p class="article-p">
    <%= f.submit class: 'form-submit' %>
  </p>
<% end %>
