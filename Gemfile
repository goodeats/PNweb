source 'https://rubygems.org'
ruby '2.4.1'
gem 'rails', '~> 5.1.1'

# db
gem 'pg'

# auth
gem 'devise'

# assets
gem 'uglifier', '>= 1.3.0'

## javascripts
gem 'coffee-rails', '~> 4.2'
gem 'jquery-rails'
# gem 'jquery-ui-rails'
gem 'jbuilder', '~> 2.0'

## css
gem 'sass-rails', '~> 5.0'

# views
gem "breadcrumbs_on_rails"

# documentation
gem 'sdoc', '~> 0.4.0', group: :doc

# heroku
gem 'rails_12factor', group: :production

# env vars
gem 'dotenv-rails'
gem 'gon' # makes env var files available to js

group :development, :test do
  gem 'pry'
  gem 'web-console', '~> 2.0'
end
